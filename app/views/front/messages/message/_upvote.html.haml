- if upvote.upvotable.is_a? Comment
  - comment = upvote.upvotable
  - post = comment.post

  = link_to front_post_path(post, anchor: comment_line_anchor_dom_id(comment)) do
    %strong
      #{message.sender.nickname}님이
      내 댓글에 공감합니다.
    %small.text-muted.text.ml-1
      = date_f message.created_at
    %div=excerpt(comment.body_striped_tags, length: 100)
- else
  - post = upvote.upvotable

  = link_to front_post_path(post) do
    %strong
      #{message.sender.nickname}님이 내 게시글을 공감합니다.
    %small.text-muted.text.ml-1
      = date_f message.created_at
