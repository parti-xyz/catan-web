          %div
            %span{:style => "font-weight: bold;"}
              = comment.user.nickname
            %span{:style => "color: rgb(119, 119, 119);"}
              %span{:style => "font-family: AppleSDGothic, \"apple sd gothic neo\", \"noto sans korean\", \"noto sans korean regular\", \"noto sans cjk kr\", \"noto sans cjk\", \"nanum gothic\", \"malgun gothic\", dotum, sans-serif; font-style: normal;"}
                = l(comment.created_at.to_date, format: :email)
            %br/
          %div
