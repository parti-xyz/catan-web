- content_for :group_style do
  :scss
    .group-one.jumbos > .text {
      color: #214166;
      > .logo {
        height: 4.25rem;
        @media (max-width: 480px) {
          width: 100%;
          height: auto;
          margin-top: 2.5REM;
        }
      }
      > .slogan {
        .main {
          font-weight: bold;
        }
      }
      > .sheets {
        display: flex;
        margin-right: -.4375rem;
        margin-left: -.4375rem;
        @media (max-width: 1200px) {
          height: auto;
          flex-direction: column;
          width: 450px;
          > .sheet + .sheet {
            margin-top: 2rem;
          }
          > .sheet:nth-child(even) {
            margin-left: 2rem;
          }
          > .sheet:nth-child(odd) {
            margin-right: 2rem;
          }
        }
        @media (max-width: 480px) {
          height: auto;
          flex-direction: column;
          width: 300px;
          > .sheet + .sheet {
            margin-top: 2rem;
          }
          > .sheet:nth-child(even) {
            margin-left: 2rem;
          }
          > .sheet:nth-child(odd) {
            margin-right: 2rem;
          }
        }
        > .sheet {
          flex: 1;
          position: relative;
          margin-right: .4375rem;
          margin-left: .4375rem;
          height: 13rem;
          > .bg {
            width: 100%;
            height: 100%;
          }
          > .body {
            display: block;
            position: absolute;
            top: 0;
            padding: 1.125rem 1rem 1.5rem 1.125rem;
            bottom: 0;
            color: #214166;
            > .title {
              font-size: 1.125rem;
              font-weight: bold;
            }
            > .desc {
              margin-top: 1.5rem;
              font-size: 0.875rem;
            }
            > .arrow {
              position: absolute;
              bottom: 2rem;
              right: 2rem;
            }
          }
        }
      }
    }

