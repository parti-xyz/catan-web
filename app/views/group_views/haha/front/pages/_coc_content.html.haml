
:scss
  .coc-box {
    margin-top: 20px;
    .simple-box {
      padding: 0;
    }

    .key-visual {
      vertical-align: middle;
      border-style: none;
      max-width: 1000px;
      width: 100%;
      margin-bottom: 2rem;
    }
    .key-visual-mobile {
      display: none;
    }

    section.key-visual-pc {
      margin-top: -5px;
    }
    @media all and (max-width:768px) {
      .key-visual {
        display: none;
      }
      section.key-visual-pc {
        margin-top: 50px;
        position: relative;
      }
      .key-visual-mobile {
        display: inline-block;
        vertical-align: middle;
        border-style: none;
        max-width: 1000px;
        width: 100%;
        margin-bottom: 2rem;
        margin-top: -50px;
      }
    }

    .coc-title {
      font-weight: bold;
      font-size: 1.125rem;
      margin-bottom: 0.25rem;
    }

    .coc-body {
      font-size: 0.875rem;
      line-height: 1.57;
    }

    .coc-section {
      margin-bottom: 2rem;
    }

    .red,
    a {
      color: #d13e02;
      font-weight: bold;
      text-decoration: underline;
    }

    .simple-box-pc {
      display: block;
    }

    .simple-box-mobile {
      display: none;
    }

    .lead-mobile {
      display: none;
    }

    .button {
      display: none;
      position: absolute;
      bottom: 50px;
      width: 100%;
      text-align: center;
    }

    @media all and (max-width:768px) {
      .simple-box-pc {
        display: none;
      }

      .simple-box-mobile {
        display: block;
      }

      .lead-mobile {
        display: block;
      }

      .btn-black {
        background-color: #2f343d;
        color: white;
        text-decoration: none;
        border-radius: 2px;
      }
      .button {
        display: block;
        position: absolute;
        bottom: 56px;
        width: 100%;
        text-align: center;
      }
    }
  }

